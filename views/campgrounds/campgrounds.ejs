<%- include("../partials/header") %>

     

	<div class="container">
		<header class="jumbotron">
			<div>
				
				<h1>Welcome to campground page</h1>
				  <p>campgrounds from all over the world</p>
				  <p>
					  <form action="/campgrounds" method="GET" class="form-inline">
						  <div class="form-group">
							 <input type="text" name="search" placeholder="Campground search..." class="form-control">
							 <input type="submit" value="search" class="btn btn-default">
						  </div>
						  
				      </form>
					  
				  </p>
				  <p><a class="btn btn-primary" href="/campgrounds/new">add new campground</a></p>
            </div>	
		</header>
		<div class="row">
			<div class="col-lg-12">
			   <h3>our most popular</h3>
		    </div>
		</div>
			<div class="row text-center" style="display:flex; flex-wrap:wrap;">
				 <% campgrounds.forEach(function(campgrounds){ %>
					 <div class="col-md-3 col-sm-6">
						 <div class="thumbnail">
							 <img src="<%= campgrounds.image %>">
							 <div class="caption">
								<h4><%=  campgrounds.name %></h4>
							 </div>
                             <P>
								 <a href="/campgrounds/<%= campgrounds._id%>" calss="btn btn-primary">more info</a>
							 </P>
						 </div>
					 </div>  
				<% }) %>
			</div>
	    </div>

<%- include("../partials/footer") %>